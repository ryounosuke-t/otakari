<h2>Please put item information</h2>

<%= form_for @items do |f| %>
<div class="field">
  <%= f.label :"item image" %>
  <%= f.file_field :image %>
</div>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div class="field">
  <%= f.label :price %>
  <%= f.number_field :price %>
</div>
<div class="field">
  <%= f.label :stock %>
  <%= f.number_field :stock %>
</div>
<div class="field">
  <%= f.submit "Upload" %>
</div>

<% end %>
