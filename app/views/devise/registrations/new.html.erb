<div class="login_panel">
<div class="sign_up_panel">
</div>
<div class="form-group">
<h2>Create your profile information</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :"nickname" %><br><br>
    <%= f.text_field :nickname, placeholder: "otakarisan",autofocus: true, class:"input-text" %>
  </div>

  <div class="field">
    <%= f.label :"email" %><br><br>
    <%= f.email_field :email, placeholder:"PC or Phone email", autofocus: true, class:"input-text" %>
  </div>

  <div class="field">
    <%= f.label :"password" %><br><br>
    <%= f.password_field :password, placeholder: "more than 6 characters", autocomplete: "off", class:"input-text" %>
  </div>

  <div class="field">
    <%= f.label :"password confirmation" %><br><br>
    <%= f.password_field :password_confirmation, placeholder:"more than 6 characters", autocomplete: "off", class:"input-text" %>
  </div>

  <div class="field">
    <%= f.label :"address" %><br><br>
    <%= f.text_area :address, placeholder: "6 Chome-11-1 Roppongi ", autofocus: true, size: "",class:"input-text" %>
  </div>

  <div class="actions">
    <%= f.submit "Register", class:"login_button" %>
  </div>
<% end %>

<%= link_to "Facebookで会員登録", user_facebook_omniauth_authorize_path %>


</div>

</div>
